<Window x:Class="S3Browser.FileViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="File Viewer" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   x:Name="FileNameTextBlock"
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="10"
                   TextWrapping="Wrap"/>

        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Read Limit: " 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <ComboBox x:Name="ReadLimitComboBox"
                          Width="150"
                          SelectedIndex="2">
                    <ComboBoxItem Content="1 MB" Tag="1048576"/>
                    <ComboBoxItem Content="5 MB" Tag="5242880"/>
                    <ComboBoxItem Content="10 MB (Default)" Tag="10485760"/>
                    <ComboBoxItem Content="50 MB" Tag="52428800"/>
                    <ComboBoxItem Content="100 MB" Tag="104857600"/>
                    <ComboBoxItem Content="Whole File" Tag="-1"/>
                </ComboBox>
            </StackPanel>

            <Button Grid.Column="2"
                    Content="Load File"
                    Width="100"
                    Height="30"
                    Click="LoadButton_Click"/>
        </Grid>

        <Border Grid.Row="2" 
                BorderBrush="Gray" 
                BorderThickness="1" 
                Margin="10,0,10,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="ContentTextBox"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         FontFamily="Consolas"
                         FontSize="12"
                         BorderThickness="0"
                         VerticalScrollBarVisibility="Disabled"
                         HorizontalScrollBarVisibility="Disabled"
                         Background="Transparent"/>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="10">
            <TextBlock x:Name="StatusTextBlock"
                       Text="Ready to load file"
                       Foreground="Gray"
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"/>
            <Button Content="Close" 
                    Width="80" 
                    Height="30"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
