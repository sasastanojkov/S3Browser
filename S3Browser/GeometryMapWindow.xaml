<Window x:Class="S3Browser.GeometryMapWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
    Title="Geometry Map Viewer" 
    Height="600" 
    Width="800"
    WindowStartupLocation="CenterOwner"
    ShowInTaskbar="False">
<Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
        
    <!-- Mapsui Map Canvas -->
    <skia:SKElement x:Name="MapCanvas" 
                    Grid.Row="0"
                    Grid.Column="0"
                    PaintSurface="MapCanvas_PaintSurface"
                    MouseDown="MapCanvas_MouseDown"
                    MouseMove="MapCanvas_MouseMove"
                    MouseUp="MapCanvas_MouseUp"
                    MouseWheel="MapCanvas_MouseWheel"/>
        
    <!-- Geometry Selection Panel -->
    <Border Grid.Row="0" 
            Grid.Column="1" 
            Background="White" 
            BorderBrush="LightGray" 
            BorderThickness="1,0,0,0"
            Width="200"
            Padding="5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="GeometryButtonsPanel">
                <TextBlock Text="Select Geometry:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="1" Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Initializing map..."/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="GeometryCountText" Text="Geometries: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>