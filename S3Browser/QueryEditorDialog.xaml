<Window x:Class="S3Browser.QueryEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Query Editor" Height="600" Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2196F3" Padding="15">
            <StackPanel>
                <TextBlock x:Name="TitleTextBlock"
                           Text="SQL Query Editor"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock x:Name="SubtitleTextBlock"
                           Text="Write custom SQL queries using DuckDB syntax"
                           FontSize="12"
                           Foreground="White"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Query Editor -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="SQL Query:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>

            <Border Grid.Row="1"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1"
                    Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="QueryTextBox"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             FontSize="13"
                             Padding="10"
                             BorderThickness="0"
                             VerticalAlignment="Stretch"
                             MinHeight="200"/>
                </ScrollViewer>
            </Border>

            <!-- Error/Status Message -->
            <Border Grid.Row="2"
                    x:Name="MessageBorder"
                    Margin="0,10,0,0"
                    Padding="10"
                    BorderThickness="1"
                    BorderBrush="#FFFF5252"
                    Background="#FFFFEBEE"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="??"
                               FontSize="16"
                               VerticalAlignment="Top"
                               Margin="0,0,10,0"/>

                    <TextBox Grid.Column="1"
                             x:Name="MessageTextBox"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             BorderThickness="0"
                             Background="Transparent"
                             FontFamily="Consolas"
                             FontSize="11"
                             VerticalAlignment="Center"/>

                    <Button Grid.Column="2"
                            Content="?"
                            Width="20"
                            Height="20"
                            FontSize="12"
                            VerticalAlignment="Top"
                            Click="CloseMessageButton_Click"
                            ToolTip="Close message"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#FFF5F5F5" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           x:Name="HintTextBlock"
                           Text="?? Tip: Use DuckDB SQL syntax. Query errors will be displayed above."
                           FontSize="11"
                           VerticalAlignment="Center"
                           Foreground="#FF666666"/>

                <Button Grid.Column="2"
                        x:Name="ExecuteButton"
                        Content="Execute Query"
                        Width="140"
                        Height="35"
                        Margin="0,0,10,0"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Background="#FF4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Click="ExecuteButton_Click"
                        IsDefault="True"
                        ToolTip="Execute the SQL query (Ctrl+Enter)"/>

                <Button Grid.Column="3"
                        Content="Cancel"
                        Width="80"
                        Height="35"
                        FontSize="13"
                        Click="CancelButton_Click"
                        IsCancel="True"/>
            </Grid>
        </Border>
    </Grid>
</Window>
